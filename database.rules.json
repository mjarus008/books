{
  "rules": {
    "users": {
      "$uid": {
      ".read": "$uid === auth.uid",
      ".write": "$uid === auth.uid"
      }
    },
    "foo": {
      ".read": true,
      ".write": true
    },
      "messages": {
        "$conversation_id": {
          ".read": true,
          "$message-id":{
            ".write": "newData.child('sender_uid').exists() && newData.child('sender_uid').val() === auth.uid"} 
        }
      }
  }
}
